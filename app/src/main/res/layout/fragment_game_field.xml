<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".GameFieldFragment">


    <ImageView
        android:id="@+id/a0"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/a1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/a2"
        app:layout_constraintStart_toEndOf="@id/a0"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/a2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a0" />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/b2"
        app:layout_constraintStart_toEndOf="@id/b0"
        app:layout_constraintTop_toBottomOf="@id/a1" />

    <ImageView
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a2" />

    <ImageView
        android:id="@+id/c0"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b0" />

    <ImageView
        android:id="@+id/c1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/c2"
        app:layout_constraintStart_toEndOf="@id/c0"
        app:layout_constraintTop_toBottomOf="@id/b1" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b2" />


</androidx.constraintlayout.widget.ConstraintLayout>